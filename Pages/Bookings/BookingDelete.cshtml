@page
@model FribergCarsRazor.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="content-box">
    <h4>Booking</h4>
    <hr />
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Car.CarName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Car.CarName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.EndDate)
        </dd>
    </dl>
    
    @functions{
     
        private int GetCustomerIdFromCookie()
        {
         
            int customerId = Convert.ToInt32(Request.Cookies["User"]); ;

            return customerId;
        }
    }

    <form method="post">
        <input type="hidden" asp-for="Booking.BookingId" />
        <input type="submit" value="Delete" class="link-button" /> |
        <a asp-page="./BookingIndex" class="link-button" asp-route-id="@GetCustomerIdFromCookie()">Back to List</a>
    </form>
</div>
