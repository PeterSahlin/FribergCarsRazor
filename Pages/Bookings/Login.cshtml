@page
@model FribergCarsRazor.Data.Booking

@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <input type="hidden" asp-for="Customer.CustomerId" />
                <input type="hidden" asp-for="Customer.FirstName" />
                <input type="hidden" asp-for="Customer.LastName" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" type="email" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input asp-for="Customer.Password" class="form-control" type="password" />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <input type="submit" value="Login" class="positive-button-color" /> *@

               @*  <a class="nav-link text-dark" href="../Bookings/LoginSuccess">Logga in</a> *@
               
