@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="user-details">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarName)
        </dd>
        </div>
      
        <div class="user-details">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Seats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Seats)
        </dd>
        </div>
        
        <div class="user-details">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Price)
        </dd>
        </div>

        <div class="user-details">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Image)
        </dd>
        </div>
    </dl>
</div>
<div>
    <a asp-page="./CarEdit" class="link-button" asp-route-id="@Model.Car.CarId">Edit</a> |
    <a asp-page="./CarIndex" class="link-button">Back to List</a>
</div>
