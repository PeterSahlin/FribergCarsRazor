@page
@model IndexModel

@{
    ViewData["Title"] = "AdminIndex";
}

<h1 class="page-header">Administrators</h1>

<form>
    <button asp-page="AdminCreate" type="submit" class="link-button standard-button-color">Add new Admin</button>
    <a asp-page="../AdminLoggedIn" class="link-button">Go back</a>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Admin[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Admin) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-page="./AdminEdit" class="link-button" asp-route-id="@item.AdminId">Edit</a> |
                    <a asp-page="./AdminDetails" class="link-button" asp-route-id="@item.AdminId">Details</a> |
                    <a asp-page="./AdminDelete" class="link-button" asp-route-id="@item.AdminId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
