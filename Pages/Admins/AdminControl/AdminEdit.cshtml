@page

@model EditModel

@{
    ViewData["Title"] = "AdminEdit";
}

<h1>Edit</h1>

<h4>Admin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Admin.AdminId" />
            <div class="form-group">
                <label asp-for="Admin.FirstName" class="control-label"></label>
                <input asp-for="Admin.FirstName" class="form-control" />
                <span asp-validation-for="Admin.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.LastName" class="control-label"></label>
                <input asp-for="Admin.LastName" class="form-control" />
                <span asp-validation-for="Admin.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.Email" class="control-label"></label>
                <input asp-for="Admin.Email" class="form-control" />
                <span asp-validation-for="Admin.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.Password" class="control-label"></label>
                <input asp-for="Admin.Password" class="form-control" />
                <span asp-validation-for="Admin.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary link-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../AdminLoggedin" class="link-button standard-button-color">Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
